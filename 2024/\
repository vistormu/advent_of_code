import gleam/list
import gleam/string
import gleam/io
import gleam/int

import utils

import gleamx/io as iox
import gleamx/function
import gleamx/result

pub fn run() {
    "input/day1_test.txt"
    |> iox.read_lines
    |> part1
    |> utils.assert_(11)

    "input/day1.txt"
    |> iox.read_lines
    |> part1
    |> function.wrap
    |> utils.run("part1", _)
}

fn part1(content: List(String)) -> Int {
    content
    |> list.map(string.split(_, "   "))
    |> list.transpose
    |> fn(lists) {
        #(list.at(0) |> ) 
    }

    |> io.debug

    0
}
